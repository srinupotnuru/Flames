<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tic Tac Toe"
    android:textSize="50dp"
    android:gravity="center"
    android:textColor="#1D1829"

    />
    <TextView
        android:id="@+id/text_view_p1"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="123dp"
        android:text="Player 1 \n     0"
        android:textColor="#111C27"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="....Player X Turn....."
        android:textSize="35dp" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="38dp"
        android:text="reset"
        android:textColor="#0A0A0A" />

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="376dp"
        android:layout_height="381dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="10dp">


        <Button
            android:id="@+id/button_00"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textSize="30sp"


            />

        <Button
            android:id="@+id/button_01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toEndOf="@id/button_00"
            android:textSize="30sp"

            />

        <Button
            android:id="@+id/button_02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toEndOf="@id/button_01"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button_00"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button_01"
            android:layout_toEndOf="@id/button_10"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button_02"
            android:layout_toEndOf="@id/button_11"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_20"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button_10"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button_12"
            android:layout_toEndOf="@id/button_20"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/button_11"
            android:layout_toEndOf="@id/button_21"
            android:textSize="30sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/text_view_p2"
        android:layout_width="122dp"
        android:layout_height="77dp"
        android:layout_alignTop="@+id/text_view_p1"
        android:layout_alignEnd="@+id/text_view_p1"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-138dp"
        android:layout_marginBottom="124dp"
        android:text="Player 2\n     0"
        android:textColor="#111C27"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/draw"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignTop="@+id/text_view_p1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="126dp"
        android:text="Draw \n    0"
        android:textColor="#111C27"
        android:textSize="30sp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_reset"
        android:layout_alignParentStart="true"
        android:onClick="donew"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/button_reset"
        android:text="new"
        android:textColor="#0A0A0A" />
</RelativeLayout>
